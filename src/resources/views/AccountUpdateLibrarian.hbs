<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/AccountUpdateLibrarian.css">

<title>Account Update Librarian</title>
</head>

<body>

<div id="main">
      <form>
    
      <div class="input-name">
        <div class="form-group-name">
          <label for="input-fullname">First Name</label><br>
          <input type="text"  id="input-fullname"  name="firstname" placeholder="David">
        </div>

        <div class="form-group-name">
          <label for="input-lastname">Last Name</label><br>
          <input type="text"  id="input-lastname"  name="lastname" placeholder="Luke">
        </div>
      </div>
       
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Male">
        <label class="form-check-label" for="inlineRadio1">Male</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female">
        <label class="form-check-label" for="inlineRadio2">Female</label>
      </div>

      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="inlineRadio3" value="Other" checked>
        <label class="form-check-label" for="inlineRadio3">Other</label>
      </div>

      <div class="form-group">
        <label for="input-address">Address</label>
        <input type="text" class="form-control" id="input-address" name="address" placeholder="12 Messi">
      </div>

      <div class="form-group">
        <label for="input-email">Email address</label>
        <input type="email" class="form-control" id="input-email" name="email" placeholder="librarian@university.com">
      </div>
  
      <div class="form-group">
        <label for="input-phonenumber">Phone number</label>
        <input type="tel" class="form-control" id="input-phonenumber" name="phonenumber" placeholder="32173612">
      </div>

      <div class="form-group">
        <label for="input-bankname">Bank name</label>
        <input type="email" class="form-control" id="input-bankname" name="bankname" placeholder="teckcombank">
      </div>
  
      <div class="form-group">
        <label for="input-bankaccount">Bank account</label>
        <input type="tel" class="form-control" id="input-bankaccount" name="bankaccount" placeholder="21313123">
      </div>

      <div class="form-group">
        <label for="department">Department</label>
        <select >
          <option value="A">A</option>
          <option value="B">B</option>
          <option value="C">C</option>
        </select>
      </div>
      <div class="savechange">
        <button class="button-savechange"><i class="fa fa-save"></i> Save change </button>
      </div>
    </form> 
</div>    


<script>
    const links = document.querySelectorAll('.nav-link');
    links.forEach(link => {
    link.addEventListener('click', function() {

      links.forEach(link => link.classList.remove('active'));
      this.classList.add('active');
      });
  });
</script>
</body>

</html>